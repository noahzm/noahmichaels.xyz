---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  projectTitle: string;
  projectSubtitle: string;
  heroImage: ImageMetadata;
  heroAlt: string;
  projectType: string;
  client: string;
  scope: string;
  year: string;
}

const {
  title,
  description,
  projectTitle,
  projectSubtitle,
  heroImage,
  heroAlt,
  projectType,
  client,
  scope,
  year,
} = Astro.props;
---

<Layout title={title} description={description}>
  <main class="max-w-6xl mx-auto">
    <!-- Hero Section -->
    <section class="mb-16">
      <div class="mb-8">
        <h1
          class="text-5xl lg:text-6xl font-light leading-tight mb-6 text-gray-900"
        >
          {projectTitle}
        </h1>
        <div class="w-20 h-1 bg-green-700 rounded-full mb-8"></div>
        <p
          class="text-2xl lg:text-3xl font-light text-gray-700 leading-relaxed max-w-4xl"
        >
          {projectSubtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 items-start">
        <div class="lg:col-span-3">
          <div class="relative group">
            <div
              class="absolute -inset-2 bg-green-700 rounded-xl blur-sm opacity-0 group-hover:opacity-10 transition-opacity duration-300"
            >
            </div>
            <Image
              src={heroImage}
              width={1200}
              height={900}
              alt={heroAlt}
              class="relative w-full rounded-xl shadow-lg transition-transform duration-300 group-hover:scale-[1.02]"
              loading="eager"
            />
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="bg-white border border-gray-100 rounded-xl p-8 shadow-sm">
            <h2 class="text-xl font-semibold mb-6 text-gray-900">
              Project Details
            </h2>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Type</dt>
                <dd class="text-gray-900 font-medium">{projectType}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Client</dt>
                <dd class="text-gray-900 font-medium">{client}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Scope</dt>
                <dd class="text-gray-900 font-medium">{scope}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">Year</dt>
                <dd class="text-gray-900 font-medium">{year}</dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="mb-16">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2 space-y-8">
          <slot />
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <section class="border-t border-gray-100 pt-8">
      <a
        href="/"
        class="inline-flex items-center gap-3 text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg px-6 py-3 transition-all duration-200 hover:shadow-lg focus:outline-none group"
      >
        <svg
          class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Work
      </a>
    </section>
  </main>
</Layout>
