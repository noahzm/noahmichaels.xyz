---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import surlyDecalImg from "../assets/images/surly-decal.png";
import mandolinImg from "../assets/images/mandolin-farm-insta.jpg";
import creativePrintingImg from "../assets/images/creative-printing-website.jpg";
import vetCardImg from "../assets/images/vet-card-mockup.jpg";
import placeholderImg from "../assets/images/placeholder.jpg";

const portfolioItems: Array<{
  title: string;
  imgSrc: ImageMetadata;
  link: string;
}> = [
  {
    title: "Custom Surly Bicycle Decals",
    imgSrc: surlyDecalImg,
    link: "/work/surly-decals",
  },
  {
    title: "Mandolin Farm Social Media Icons",
    imgSrc: mandolinImg,
    link: "/work/mandolin-farm",
  },
  {
    title: "Veterinary Reminder Mailer Cards",
    imgSrc: vetCardImg,
    link: "/work/vet-mailers",
  },
  {
    title: "Creative Printing Website Redesign",
    imgSrc: creativePrintingImg,
    link: "/work/creative-printing",
  },
];
---

<Layout
  title="Work — Noah Michaels"
  description="Selected design projects by Noah Michaels — product, web, print, and branding work."
>
  <div>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {
        portfolioItems.map((item) => (
          <div class="col">
            <a
              href={item.link}
              title={item.title}
              class="portfolio-item card border-0"
            >
              <div class="portfolio-image-wrapper">
                <Image
                  src={item.imgSrc}
                  width={1200}
                  height={900}
                  alt={`A preview of the ${item.title} project.`}
                  loading="eager"
                  class="card-img"
                />
              </div>
              <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center bg-body overlay">
                <h3 class="card-title">{item.title}</h3>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  /* Center overlay content and add padding for breathing room */
  .portfolio-item .overlay {
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem; /* add space around overlay text */
    height: 100%; /* ensure it fills the card area */
  }

  .portfolio-item:hover .overlay {
    opacity: 1;
  }

  .portfolio-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 75%; /* 4:3 aspect ratio (900/1200 = 0.75) */
    overflow: hidden;
  }

  .portfolio-image-wrapper img,
  .portfolio-image-wrapper :global(img) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
